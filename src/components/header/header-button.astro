---
interface Props {
	icon: string;
}

const { icon } = Astro.props;
---

<span
	class="group flex items-center justify-center p-0.5 bg-opacity-50 rounded-full shadow shadow-slate-900 bg-slate-600 backdrop-blur-lg group-hover:bg-slate-600"
>
	<span
		class="flex p-1.5 rounded-full shadow-inner bg-opacity-50 shadow-slate-950 bg-slate-900 group-hover:bg-slate-700"
	>
		<span class={icon}></span>
	</span>
</span>
